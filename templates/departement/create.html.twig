{% extends 'base.html.twig' %}
{% block title %}
    Création d'un département
{% endblock %}
{% block body %}
    <h2>Création d'un département</h2>
    {{form_start(formDepartement)}}
    
    {{form_row(formDepartement.libelle,{
    	'attr':{'placeholder':'Nom du département'}
    	}
    )}}
    
    {{form_row(formDepartement.etablissement,{
    	'attr':{'placeholder':"Nom de l'établissement "},
    	}
    )}}
    <button type="submit" class="btn btn-success">Ajouter</button>

    {{form_end(formDepartement)}}
    <hr/>
    <a href="{{path('departement')}}"><button type="submit" class="btn btn-info">Revenir à la liste</button></a>
{% endblock %}